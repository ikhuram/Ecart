    var cartProducts = [];
    
    $(".addtoCart").click(function () {

        var productId = $(this).attr("data-id");

        cartProducts.push(productId);
        $.cookie("cartProducts", cartProducts.join('-'), {path: '/'});
    });


    function focusAction() {
        //alert("SUCCESS");
        $('html, body').animate({
            scrollTop: $("#actionContainer").offset().top - 100
        },1000);
    }
</script>