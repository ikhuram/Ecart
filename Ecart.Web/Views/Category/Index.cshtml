@model List<Ecart.Entities.Category>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h2 align="center">Categories</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <td>Name</td>
                <td>Description</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                </tr>
            }
        </tbody>
    </table>
    
</div>